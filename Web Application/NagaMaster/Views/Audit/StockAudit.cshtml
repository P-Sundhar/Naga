    function LoadGrid() {
        var dataset = new Array();
        $.ajax({
            type: "POST",
            url: "/Audit/StockAudit_Get",
            contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            dataType: "json",
            data: $("#frmAudit").serialize(),
            success: function (jsonData) {
                if (jsonData != null) {
                    len = jsonData.length;
                    if ($.fn.DataTable.fnIsDataTable("#tblAudit"))
                        $("#tblAudit").dataTable().fnDestroy();


                    for (i = 0; i < len; i++) {
                        dataset.push([jsonData[i].Plant, jsonData[i].CrateBarcode, jsonData[i].Barcode, jsonData[i].BatchNo,
                            jsonData[i].MaterialCode, jsonData[i].MaterialDesc, jsonData[i].sysPlant, jsonData[i].sysCrate, jsonData[i].sysBarcode,
                            jsonData[i].sysBatch, jsonData[i].sysMCode, jsonData[i].sysMDesc, jsonData[i].Flags])

                    }
                    $('#tblAudit').DataTable({
                        "language": {
                            "paginate": {
                                "previous": "<i class='las la-angle-left'></i>",
                                "next": "<i class='las la-angle-right'></i>"
                            }
                        },
                        "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                            console.log(aData[12]);
                            switch (aData[12]) {
                                case 1:
                                    $(nRow).css('background-color', '#fc5d63')
                                    break;
                                case 0:
                                    $(nRow).css('background-color', '#a5faa9')
                                    break;
                                case 2: {
                                    $(nRow).css('background-color', '#a6b6f7')
                                    break;
                                }
                                case 3:
                                    $(nRow).css('background-color', '#fae3a2')
                                    break;
                            }
                        },
                        'aoColumnDefs': [{
                            'visible': false,
                            'targets': [12]                      //Change Column # Here For delete Column
                        }],
                        data: dataset,
                        columns: [{ title: "PPlant", width: "10%" }, { title: "PCrate", width: "10%" }, { title: "PBarcode", width: "15%" }, { title: "PBatch", width: "10%" },
                        { title: "PMCode", width: "10%" }, { title: "PMDesc", width: "50%" }, { title: "SPlant", width: "10%" }, { title: "SCrate", width: "10%" },
                            { title: "SBarcode", width: "15%" }, { title: "SBatch", width: "10%" }, { title: "SMCode", width: "10%" }, { title: "SMDesc", width: "50%" }
                            , { title: "SMDesc", width: "50%" }],
                        "autoWidth": false,

                    });

                } else {
                    alert("something went wrong");
                }
            }
        });
    }


    function Download() {
        var PPlant = $('#PlantId').val();
        $.ajax({
            type: "POST",
            url: '@Url.Action("StockAudit_Dwnld", "Audit")?Plant=' + PPlant,
            contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            dataType: "json",
            success: function (jsonData) {
                console.log(jsonData);
                if (jsonData != null) {
                    //en = jsonData.length;
                    if (jsonData.Success == 0)
                        toastr.error(jsonData.Message);
                    else if (jsonData.Success == 1) {
                        var fileURL = "../Reports/" + jsonData.Data;
                        window.open(fileURL);
                        setTimeout(function () { location.reload(); }, 2000);
                    }
                    else if (jsonData.Success == 3) {
                        if (confirm(jsonData.Message) != true)
                            return;

                        location.reload(true);
                    }
                } else {
                    alert("something went wrong");
                }
            }
        });
    }


    function Adjustment() {
        var PPlant = $('#PlantId').val();
        if (confirm("Are You Want to Audit Adjust now?") != true)
            return;
        $.ajax({
            type: "POST",
            url: '@Url.Action("StockAudit_Adjust", "Audit")?Plant=' + PPlant,
            contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            dataType: "json",
            success: function (jsonData) {
                console.log(jsonData);
                if (jsonData != null) {
                    //en = jsonData.length;
                    if (jsonData.Success == 0)
                        toastr.error(jsonData.Message);
                    else if (jsonData.Success == 1) {
                        toastr.success(jsonData.Message);
                        setTimeout(function () { location.reload(); }, 2000);
                    }
                    else if (jsonData.Success == 2) {
                        toastr.error(jsonData.Message);
                        setTimeout(function () { location.reload(); }, 2000);
                    }
                } else {
                    alert("something went wrong");
                }
            }
        });
    }
</script>