<script>
    var dataset = new Array();

    function ResError() {
        toastr.error("You are not eligible to Access Missing Crates");
    }

    function fnUpdate() {

        var arrData = [];
        var ShipNo = document.getElementById("ShipId").value;
        var ProcId = document.getElementById("PType").value;
        $('#btnSave').attr('disabled', 'disabled');

        // Iterate through the dataset
        for (let i = 0; i < dataset.length; i++) {
            var obj = {};
            const rowData = dataset[i];
            const crateCode = rowData[1];
            const chbMissing = document.getElementById("Missing" + i);
            const chbRevoke = document.getElementById("Revoke" + i);
            const chbReceived = document.getElementById("Received" + i);

            const isMissingChecked = chbMissing.checked;
            const isRevokeChecked = chbRevoke.checked;
            const isReceivedChecked = chbReceived.checked;

            let checkedValue;

            if (isMissingChecked) 
                checkedValue = chbMissing.defaultValue;
            else if (isRevokeChecked)
                checkedValue = chbRevoke.defaultValue;
            else if (isReceivedChecked)
                checkedValue = chbReceived.defaultValue;
            else
                checkedValue = "0";

            console.log(checkedValue);

            obj.CrateCode = crateCode;
            obj.UpdateVal = checkedValue;
            arrData.push(obj);
        }

        $.ajax({
            type: "POST",
            url: "/Service/UpdateMissingCrates?ShipId=" + ShipNo + "&ProcType=" + ProcId,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            data: JSON.stringify(arrData),
            success: function (jsonData) {
                if (jsonData.Success == 1) {
                    toastr.success(jsonData.Message);
                    $('#btnSave').removeAttr('disabled');
                    setTimeout(function () { location.reload(); }, 2000);
                }
                else if (jsonData.Success == 0) {
                    toastr.error(jsonData.Message);
                    $('#btnSave').removeAttr('disabled');
                    setTimeout(function () { location.reload(); }, 2000);
                }
            }
        });

    }



    function GetCrates() {
        dataset = [];
        $('#btnSave').removeAttr('disabled');
        let PType = document.getElementById("PType").value;
        let ShipNo = document.getElementById("ShipId").value;
        if (PType == "") {
            toastr.error("Please Select Proccess Type");
            return true;
        }
        if (ShipNo == "") {
            var Msg = PType == "1" ? "Tracking Number" : PType == "2" ? "Shipment Number" : "";
            toastr.error("Please Select " + Msg);
            return true;
        }
        $.ajax({
            type: "POST",
            url: "/Service/GetMissingCrates",
            data: JSON.stringify({
                "ProccessType": PType,
                "Shipment": ShipNo,
            }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (jsonData) {
                if ($.fn.DataTable.fnIsDataTable("#hdrtblGrid"))
                    $("#hdrtblGrid").dataTable().fnDestroy();

                var i = 0;
                var len = 0;

                if (jsonData == null)
                    return;

                len = jsonData.length;
                for (i = 0; i < len; i++) {

                    dataset.push([(i + 1), jsonData[i].CrateCode, `<input id="Missing` + i + `" type="checkbox" value="3" onclick="fnClick(Missing` + i + `,Revoke` + i + `, Received` + i + `)">`,
                        `<input id="Revoke` + i + `" type="checkbox" value="4" onclick="fnClick(Revoke` + i + `,Missing` + i + `, Received` + i + `)">`,
                        `<input id="Received` + i + `" type="checkbox" value="5" onclick="fnClick( Received` + i + `, Missing` + i + `,Revoke` + i + `)">`]);
                }


                $('#hdrtblGrid').DataTable({
                    "autoWidth": true,
                    "sScrollY": "300px",
                    "sScrollX": "100%",
                    "paging": false,
                    "searching": true,
                    "ordering": false,
                    data: dataset,
                    columns: [{ title: "#", width: "5%" }, { title: "CRATES", width: "15%" }, { title: "Missing", width: "10%" }, { title: "REVOKE", width: "10%" },
                    { title: "RECEIVED", width: "10%" }]
                });
            },

        });
    }


    function fnClick(a, b, c) {
        if (a.checked == true) {
            b.checked = false;
            c.checked = false;
        }

    }

</script>
<script>
    function getMat() {

        $.ajax({
            type: "POST",
            url: "/Service/GetMaterial",
            contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            dataType: "json",
            data: $("#frmAssiment").serialize(),
            success: function (jsonData) {
                if (jsonData != null) {
                    if (jsonData.Success == 1) {

                        $("#Material").val(jsonData.Data.Material);

                    }
                    else if (jsonData.Success == 0)
                        toastr.error(jsonData.Message);
                    else
                        toastr.error(jsonData.Message);
                }
                else {
                    alert("something went wrong");
                }
            }
        });
    }

</script>
<script>

    function GetShipment() {

        $.ajax({
            type: "POST",
            url: "/Service/GetShipmentOrTrack",
            contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            dataType: "json",
            data: $("#frmAssiment").serialize(),
            success: function (jsonData) {
                if (jsonData != null) {
                    if (jsonData.Status == 1) {
                        $("#ShipId").empty();
                        var lankanListArray = jsonData.Data;

                        $("#ShipId").append($("<option></option>").val("").html("--SELECT--"));
                        // running a loop
                        $.each(lankanListArray, function () {
                            $("#ShipId").append($("<option></option>").val(this.Text).html(this.Text));
                        });
                    }
                    else if (jsonData.Status == 0)
                        toastr.error(jsonData.Message);
                    else
                        toastr.error(jsonData.Message);
                }
                else {
                    alert("something went wrong");
                }
            }
        });
    }

    function funclear() {
        $("#PType").val("");
        $("#ShipId").val("");
        $('#hdrtblGrid input:checkbox:checked').prop("checked", false);
        $("#hdrtblGrid").empty();
    }

</script>

