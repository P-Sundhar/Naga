<script>
    

                

    


    function GetSecondary() {

        var dataset = new Array();
        let RejectType = document.getElementById("RejectType").value;
        let BatchNo = document.getElementById("BatchNo").Text;
        if (RejectType == "") {
            toastr.error("Please Select Reject Type");
            return true;
        }
        if (BatchNo == "") {
            toastr.error("Please Select Batche Number");
            return true;
        }
        $.ajax({
            type: "POST",
            url: "/Service/GetBarcode",
            data: JSON.stringify({
                "FromDate": $('#FromDate').val(),
                "ToDate": $('#ToDate').val(),
                "RejectType": $('#RejectType').val(),
                "BatchNo": $("#BatchNo").val(),
                "Material": $('#Material').val(),
            }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (jsonData) {
                if ($.fn.DataTable.fnIsDataTable("#tblReject"))
                    $("#tblReject").dataTable().fnDestroy();

                $("#tblReject").empty();
                var checkArray = jsonData.Data;
                $.each(checkArray, function () {
                    dataset.push(['<input type="checkbox" id="Barcode" class="checkbox-inline ml-sm-5" name="' +
                        this.Text + '" value="' + this.Text + '">' + this.Text])
                });
                $('#tblReject').prepend('<input type="checkbox" id="allselect"> Select All');

                $('#allselect').on('click', function () {
                    $('.checkbox-inline').prop('checked', this.checked);
                });

                $('#tblReject').DataTable({
                    "paging": false,
                    data: dataset,
                    columns: [{ title: "Items" }]
                });
            },

        });
    }


    //    if (jsonData.checked) {
                    //        $('input[name="' + this.Text + '"]').prop('checked', true);
                    //}

</script>
<script>
    function getMat() {

        $.ajax({
            type: "POST",
            url: "/Service/GetMaterial",
            contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            dataType: "json",
            data: $("#frmAssiment").serialize(),
            success: function (jsonData) {
                if (jsonData != null) {
                    if (jsonData.Success == 1) {

                        $("#Material").val(jsonData.Data.Material);
                        
                    }
                    else if (jsonData.Success == 0)
                        toastr.error(jsonData.Message);
                    else
                        toastr.error(jsonData.Message);
                }
                else {
                    alert("something went wrong");
                }
            }
        });
    }

</script>
<script>

    function LoadBatch() {

        $.ajax({
            type: "POST",
            url: "/Service/GetBatch",
            contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            dataType: "json",
            data: $("#frmAssiment").serialize(),
            success: function (jsonData) {
                if (jsonData != null) {
                    if (jsonData.Success == 1) {
                        $("#BatchNo").empty();
                        var lankanListArray = jsonData.Data;

                        $("#BatchNo").append($("<option></option>").val("").html("--Select--"));
                        // running a loop
                        $.each(lankanListArray, function () {
                            $("#BatchNo").append($("<option></option>").val(this.Text).html(this.Text));
                        });
                    }
                    else if (jsonData.Success == 0)
                        toastr.error(jsonData.Message);
                    else
                        toastr.error(jsonData.Message);
                }
                else {
                    alert("something went wrong");
                }
            }
        });
    }

    function funclear() {
        $("#BatchesNo").val("");
        $("#Material").val("");
        $('#tblReject input:checkbox:checked').prop("checked", false);
        $("#tblReject").empty();
    }
    
</script>

