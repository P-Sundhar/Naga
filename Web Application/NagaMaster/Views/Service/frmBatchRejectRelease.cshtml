<script>

    $(document).ready(function () {

        // Initialize select2
        $("#BatchNo").select2();
        $("#MaterialCode").select2();
    });


    function ResError() {
        toastr.error("You are not eligible for Hold items");
    }
    function ItemHold() {

        var values = $('#tblHold input:checkbox:checked').map(function () {
            return $(this).val();
        }).get();

        var arrData = [];
        arrData = values;
        console.log(arrData);
        let HoldType = document.getElementById("HoldType").value;
        let MaterialCode = document.getElementById("MaterialCode").Text;
        if (HoldType == "") {
            toastr.error("Please Select Hold Type");
            return true;
        }
        if (MaterialCode == "") {
            toastr.error("Please Select Batch Number");
            return true;
        }
        if (values == "") {
            toastr.error("Please Select Secondary Batch to Hold");
            return true;
        }
        if (confirm("Are you sure to Save ?")) {
            $.ajax({
                type: "POST",
                url: "/Service/ReleaseBatchItems?btchmodel=" + arrData,
                contentType: "application/x-www-form-urlencoded; charset=UTF-8",
                dataType: "json",
                data: $("#frmBatchHold").serialize(),
                success: function (jsonData) {
                    if (jsonData.Success == 1) {
                        toastr.success(jsonData.Message);
                        setTimeout(function () { location.reload(); }, 2000);
                    }
                }
            });
        }
        return false;
    }
</script>

<script>
    function GetSecondary() {
        $('#tblHold input:checkbox:checked').prop("checked", false);
        $("#tblHold").empty();
        var dataset = new Array();
        let HoldType = document.getElementById("HoldType").value;
        let MaterialCode = document.getElementById("MaterialCode").Text;
        if (HoldType == "") {
            toastr.error("Please Select Hold Type");
            return true;
        }
        if (MaterialCode == "") {
            toastr.error("Please Select Batch Number");
            return true;
        }
        $.ajax({
            type: "POST",
            url: "/Service/ReleaseBatchesGetBarcode",
            data: $("#frmBatchHold").serialize(),
            contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            dataType: "json",
            success: function (jsonData) {
                if ($.fn.DataTable.fnIsDataTable("#tblHold"))
                    $("#tblHold").dataTable().fnDestroy();

                $("#tblHold").empty();
                var checkArray = jsonData.Data;
                $.each(checkArray, function () {
                    dataset.push(['<input type="checkbox" id="Barcode" class="checkbox-inline ml-sm-5" name="' +
                        this.Text + '" value="' + this.Text + '">' + this.Text])
                });
                $('#tblHold').prepend('<input type="checkbox" id="allselect"> Select All');

                $('#allselect').on('click', function () {
                    $('.checkbox-inline').prop('checked', this.checked);
                });

                $('#tblHold').DataTable({
                    "paging": false,
                    data: dataset,
                    columns: [{ title: "Items" }]
                });
            },

        });
    }
</script>
<script>
    function getBatch() {
        $('#tblHold input:checkbox:checked').prop("checked", false);
        $("#tblHold").empty();
        $.ajax({
            type: "POST",
            url: "/Service/ReleaseBatchMaterial",
            contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            dataType: "json",
            data: $("#frmBatchHold").serialize(),
            success: function (jsonData) {
                if (jsonData != null) {
                    if (jsonData.Success == 1) {
                        $("#BatchNo").empty();
                        var lankanListArray = jsonData.Data;

                        $("#BatchNo").append($("<option></option>").val("").html("---SELECT---"));
                        // running a loop
                        $.each(lankanListArray, function () {
                            $("#BatchNo").append($("<option></option>").val(this.Value).html(this.Text));
                        });
                        $("#BatchNo").select2();

                    }
                    else if (jsonData.Success == 0)
                        toastr.error(jsonData.Message);
                    else
                        toastr.error(jsonData.Message);
                }
                else {
                    alert("something went wrong");
                }
            }
        });
    }
</script>
<script>

    function ChangeBtn() {
        let HoldType = document.getElementById("HoldType").value;
        if (HoldType == "")
            return true;
        else if (HoldType == "0")
            $("#btnrelease").text('Release');
        else if (HoldType == "1")
            $("#btnrelease").text('FG Discard');
    }

    function LoadMaterial() {

        $.ajax({
            type: "POST",
            url: "/Service/LoadPlantReleaseBatch",
            contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            dataType: "json",
            data: $("#frmBatchHold").serialize(),
            success: function (jsonData) {
                if (jsonData != null) {
                    if (jsonData.Success == 1) {
                        $("#MaterialCode").empty();
                        var lankanListArray = jsonData.Data;

                        $("#MaterialCode").append($("<option></option>").val("").html("---SELECT---"));
                        // running a loop
                        $.each(lankanListArray, function () {
                            $("#MaterialCode").append($("<option></option>").val(this.Value).html(this.Text));
                        });
                        $("#MaterialCode").select2();
                    }
                    else if (jsonData.Success == 0)
                        toastr.error(jsonData.Message);
                    else
                        toastr.error(jsonData.Message);
                }
                else {
                    alert("something went wrong");
                }
            }
        });
    }
    function funclear() {
        $("#btnrelease").text('Release');
        $("#MaterialCode").val("");
        $("#BatchNo").val("");
        $("#MaterialDesc").val("");
        $("#HoldType").val("");
        $('#tblHold input:checkbox:checked').prop("checked", false);
        $("#tblHold").empty();
    }

</script>

