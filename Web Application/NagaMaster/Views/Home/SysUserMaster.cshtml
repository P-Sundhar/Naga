                }
            });
        }
    }
</script>
<script>
    $(document).ready(function () {
        LoadGrid();
    });

    function LoadGrid() {
        var dataset = new Array();
        $.ajax({
            type: "GET",
            url: "/Home/GetUser",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (jsonData) {


                if (jsonData != null) {
                    len = jsonData.length;
                    console.log(jsonData);
                    if ($.fn.DataTable.fnIsDataTable("#tblUser"))
                        $("#tblUser").dataTable().fnDestroy();

                    if (len == 0)
                        alert("No Data Found !");


                    for (i = 0; i < len; i++) {
                        jsonData[i].PlantName += '-' + jsonData[i].PlantId;

                        var Status = jsonData[i].Status == 1 ? "Active" : "Inactive";

                        dataset.push(["<div class=\"text-center flex\"><a href=\"#\" class=\"tableIconA bs-tooltip\" data-toggle=\"modal\"  " +
                            "onclick=\"fundetails('" + jsonData[i].UserId + "','" + jsonData[i].PlantId + "','" + jsonData[i].UnitId + "','" + jsonData[i].EmpId +
                            "','" + jsonData[i].UserPWD + "','" + jsonData[i].Status +
                            "','" + jsonData[i].Systems + "')\"><i class=\"las la-edit font-20 text-primary\"aria-hidden=\"true\"style=\"color: #0056b3!important;font-size: 20px;\"></i></a></div>",(i + 1), jsonData[i].PlantName, jsonData[i].UnitName, jsonData[i].EmpDesc, jsonData[i].UserId, Status,





                            "<div class=\"text-center flex\"><a href=\"#\" class=\"tableIconA bs-tooltip\"  " +
                            "onclick=\"fndelete('" + jsonData[i].UserId + "') \"><i class=\"las la-trash \" aria-hidden=\"true\" style=\"color: tomato;font-size: 20px;\"></i></a></div>"])



                    }

                    $('#tblUser').DataTable({

                        "autoWidth": true,
                        "sScrollY": "300px",
                        "sScrollX": "100%",
                        "language": {
                            "paginate": {
                                "previous": "<i class='las la-angle-left'></i>",
                                "next": "<i class='las la-angle-right'></i>"
                            }
                        },
                        'aoColumnDefs': [{
                            'visible': Boolean(@(ViewBag.IsEdit)),
                            'aTargets' : 7
                        }, {
                            'visible': Boolean(@(ViewBag.IsEdit)),
                           'aTargets' : 0
                           }],

                        data: dataset,
                        columns: [{ title: "Edit" }, { title: "Sl No" }, { title: "Plant Name" }, { title: "Unit Name" }, { title: "Employee Name" }, { title: "User Id" }, { title: "Status" }, { title: "Delete" }]
                    });

                } else {
                    alert("something went wrong");
                }
            }
        });
    }



    function fnsave() {
        var systems = '';

        $('input[name="Systems"]:checked').each(function () {
            console.log(this.value);
            systems += this.value + ',';
        });


        console.log(systems);



        let PlantId = document.getElementById("PlantId").value;
        let UnitId = document.getElementById("UnitId").value;
        let EmpId = document.getElementById("EmpId").value;
        let UserId = document.getElementById("UserId").value;
        let UserPWD = document.getElementById("UserPWD").value;

        if (UserId == "") {
            toastr.error("Please enter UserId")
            return true;
        }
        if (PlantId == "") {
            toastr.error("Please Select PlantName");
            return true;
        }
        if (UnitId == "") {
            toastr.error("Please select UnitName");
            return true;
        }
        if (EmpId == "") {
            toastr.error("Please select Employee");
            return true;
        }
        if (UserPWD == "") {
            toastr.error("Please enter Password")
        }
        if (systems != '')
            systems = systems.substr(0, systems.length - 1);
        else {
            toastr.error('Please Select Systems');
            return true;
        }
        var purl = '';
        var ptype = '';
        if ($('#UsrMstrId').val() == '' || $('#UsrMstrId').val() == 0) {

            purl = "/Home/AddUser";
            ptype = "POST";
            $('#UsrMstrId').val(0);
        }
        else {
            purl = "Home/EditUser";
            ptype = "POST";
        }

        $.ajax({
            type: ptype,
            url: purl,
            data: JSON.stringify({
                "UserId": parseInt($('#UserId').val()),
                "PlantId": $('#PlantId').val(),
                "UnitId": $('#UnitId').val(),
                "Systems": systems,
                "UserPWD": $('#UserPWD').val(),
                "EmpId": $('#EmpId').val(),
                "Status": $('#Status').val(),
                "CreatedBy": 1,
                "CreatedOn": new Date(),
                "ModifiedBy": 1,
                "ModifiedOn": new Date(),
            }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                console.log(response);
                if (response.Success == 0) {
                    toastr.error(response.Message);
                }
                else if (response.Success == 1) {
                    toastr.success(response.Message);
                    funclear(1);
                    LoadGrid();
                }
                else {
                    toastr.error('something went wrong' + response.Message);
                }
            }
        });

    }

    function funclear(a) {

        $('#UserId').val("").removeAttr('disabled');
        $('#PlantId').val("");
        $('#UnitId').val("");
        $('#EmpId').val("");
        $('#UsrMstrId').val("");
        $('#UserPWD').val("");
        $('#Status').val(1);
        $('#Systems').val("");
        $('input:checkbox').each(function () { this.checked = false; });


        if (a == 0)
            $('#UserModal').modal("show");
        else
            $('#UserModal').modal("hide");
    }


