                                            </div>
                                        </div>
                                        <div class="form-group col-sm-4">
                                            <label class="col-form-label col-sm-12">
                                                Employee
                                            </label>
                                            <div class="">
                                                @Html.DropDownListFor(x => x.EmpId, new SelectList(Model.EmployeeDetail, "Value", "Text"), "--- ALL ---", new { @class = "form-control", name = "EmpId" })

                                            </div>
                                        </div>
                                        <div class="form-group col-sm-4">
                                            <label class="col-form-label pl-2">Device Id</label>
                                            <div class="">
                                                <input class="form-control" id="DeviceId"
                                                       type="text">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="item-input-lane2 row">
                                        
                                        <div class="form-group col-sm-4">
                                            <label class="col-form-label pl-2">User Id</label>
                                            <div class="">
                                                <input class="form-control" id="UserId"
                                                       type="text">
                                            </div>
                                        </div>
                                        <div class="form-group col-sm-4">
                                            <label class="col-form-label pl-2">Password</label>
                                            <div class="">
                                                <input class="form-control" id="UserPWD" type="password">
                                            </div>
                                        </div>
                                        <div class="form-group col-sm-4">
                                            <label class="col-form-label col-sm-12">
                                                Status
                                            </label>
                                            <div class="">
                                                <select class="form-control " id="Status">
                                                    <option value="1" selected="selected">Active</option>
