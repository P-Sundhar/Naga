<div class="layout-px-spacing">
    <div class="row layout-top-spacing">
        <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
            <div class="widget-content widget-content-area br-6">
                <h4 class="table-header mb-4">Device User Master</h4>
                <div class="toggle-list col-sm-12">
                    <div class="row e-tools mb-4">
                        <div class="col-sm-12 Export-Tools">
                            @if (ViewBag.IsEdit == 1)
                            {


                                <div class="add-s">
                                    <div id="headingOne1">
                                        <section class="mb-0 mt-0">
                                            <button type="button" class="btn" onclick="funclear(0)">
                                                <i class="las la-plus-circle la-lg"></i>Add User
                                            </button>
                                        </section>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="col-sm-6 add-s">

                        </div>
                    </div>
                </div>

                <!-- Add item Modal Starts -->

                <div id="UserModal" class="modal fade systemuser-modal" tabindex="-1"
                     role="dialog" aria-labelledby="exampleModal-supplierLabel"
                     aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">
                                    Device User Master
                                </h5>
                                <button type="button" class="close" data-dismiss="modal"
                                        aria-label="Close">
                                    <i class="las la-times" style="border-radius: 3px;"></i>
                                </button>
                            </div>
