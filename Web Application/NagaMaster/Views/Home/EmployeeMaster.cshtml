<script>
    $(document).ready(function () {
        LoadGrid();
    });

    function LoadGrid() {
        var dataset = new Array();
        $.ajax({
            type: "GET",
            url: "/Home/GetEmployee",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (jsonData) {


                if (jsonData != null) {
                    len = jsonData.length;
                    console.log(jsonData);
                    if ($.fn.DataTable.fnIsDataTable("#tblEmp"))
                        $("#tblEmp").dataTable().fnDestroy();

                    if (len == 0)
                        alert("No Data Found !");


                    for (i = 0; i < len; i++) {

                        var Status = jsonData[i].Status == 1 ? "Active" : "Inactive";
                        //var EmpType = jsonData[i].EmpType == 1 ? "Operator" : "Admin";

                        dataset.push(["<div class=\"text-center flex\"><a href=\"#\" class=\"tableIconA bs-tooltip\" data-toggle=\"modal\"  " +
                            "onclick=\"fundetails('" + jsonData[i].EmpId + "','" + jsonData[i].EmpDesc + "','" + jsonData[i].EmpType + "','" + jsonData[i].Status +
                            "')\"><i class=\"las la-edit font-20 text-primary\"aria-hidden=\"true\"style=\"color: #0056b3!important;font-size: 20px;\"></i></a></div>", (i + 1), jsonData[i].EmpDesc, jsonData[i].RoleName, Status,





                        "<div class=\"text-center flex\"><a href=\"#\" class=\"tableIconA bs-tooltip\"  " +
                        "onclick=\"fndelete('" + jsonData[i].EmpId + "') \"><i class=\"las la-trash \" aria-hidden=\"true\" style=\"color: tomato;font-size: 20px;\"></i></a></div>"])



                    }

                    $('#tblEmp').DataTable({

                        "autoWidth": true,
                        "sScrollY": "300px",
                        "sScrollX": "100%",
                        "language": {
                            "paginate": {
                                "previous": "<i class='las la-angle-left'></i>",
                                "next": "<i class='las la-angle-right'></i>"
                            }
                        },
                        'aoColumnDefs': [{
                            'visible': Boolean(@(ViewBag.IsEdit)),
                            'aTargets' : 5
                        }, {
                            'visible': Boolean(@(ViewBag.IsEdit)),
                           'aTargets' : 0
                           }],
                        data: dataset,
                        columns: [{ title: "Edit" }, { title: "Sl No" }, { title: "Employee Name" }, { title: "Employee Type" }, { title: "Status" }, { title: "Delete" }]
                    });

                } else {
                    alert("something went wrong");
                }
            }
        });
    }

    function fnsave() {
        let EmpDesc = document.getElementById("EmpDesc").value;
        //let EmpType = document.getElementById('EmpType').value;


        if (EmpDesc == "") {
            toastr.error('Please Enter Employee Name');
            return true;
        }
        //if (EmpType == "") {

        //    toastr.error('Please Select EmpType');
        //    return true;
        //}


        var purl = '';
        var ptype = '';


        if ($('#EmployeeId').val() == '' || $('#EmployeeId').val() == 0) {
            purl = "/Home/AddEmployee";
            ptype = "POST";
            $('#EmployeeId').val(0);

        }
        else {
            purl = "/Home/EditEmployee";
            ptype = "POST";

        }

        $.ajax({
            type: ptype,
            url: purl,
            data: JSON.stringify({
                "EmpId": parseInt($('#EmployeeId').val()),
                "EmpDesc": $('#EmpDesc').val(),
                "EmpType": $('#EmpType').val(),
                "Status": $('#Status').val(),
                "CreatedBy": 1,
                "CreatedOn": new Date(),
                "Updatedby": 1,
                "UpdatedOn": new Date(),

            }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                console.log(response);
                if (response.Success == 0) {
                    toastr.error(response.Message);
                }
                else if (response.Success == 1) {
                    toastr.success(response.Message);
                    funclear(1);
                    LoadGrid();
                }
                else {
                    toastr.error('something went wrong' + response.Message);
                }
            }
        });
    }

    function funclear(a) {
        $('#EmployeeId').val("");
        $('#EmpDesc').val("");
        $('#EmpType').val(2);
        $('#Status').val(1);

        if (a == 0)
            $('#empModal').modal("show");
        else
            $('#empModal').modal("hide");
    }

    function fundetails(a, b, c, d) {
        $('#EmployeeId').val(a);
        $('#EmpDesc').val(b);
        $('#EmpType').val(c);
        if (d == '1')
            $('#Status').val(1);
        else
            $('#Status').val(0);

        $('#empModal').modal("show");

    }


    function fndelete(id) {
        if (confirm("Do you want to delete this Settings?") == true) {
            $.ajax({
                type: "POST",
                url: "/Home/DeleteEmployee?EmpId=" + id,
                contentType: "application/json; charset=utf-8",
                dataType: "json",

                success: function (jsonData) {
                    if (jsonData.Success == 0) {
                        toastr.error(jsonData.Message);
                    }
                    else if (jsonData.Success == 1) {
                        toastr.success(jsonData.Message);
                    }
                    LoadGrid();
                },
                error: function () {
                    console.log('error');
                }
            });
        }
    }
</script>