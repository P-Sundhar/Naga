<script>
    $(document).ready(function () {
        LoadGrid();
    });

    function LoadGrid() {
        var dataset = new Array();
        $.ajax({
            type: "GET",
            url: "/Home/GetRack",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (jsonData) {


                if (jsonData != null) {
                    len = jsonData.length;
                    console.log(jsonData);
                    if ($.fn.DataTable.fnIsDataTable("#tblRack"))
                        $("#tblRack").dataTable().fnDestroy();

                    if (len == 0)
                        alert("No Data Found !");


                    for (i = 0; i < len; i++) {

                        jsonData[i].PlantName += '-' + jsonData[i].PlantId;

                        var Status = jsonData[i].Status == 1 ? "Active" : "Inactive";

                        dataset.push(["<div class=\"text-center flex\"><a href=\"#\" class=\"tableIconA bs-tooltip\" data-toggle=\"modal\"  " +
                            "onclick=\"fundetails('" + jsonData[i].Id + "','" + jsonData[i].RackNumber + "','" + jsonData[i].PlantId + "','" + jsonData[i].PlantId + "','" + jsonData[i].StorageLocation +
                            "','" + jsonData[i].Minimum + "','" + jsonData[i].Maximum + "', '" + jsonData[i].Status + "')\"><i class=\"las la-edit font-20 text-primary\"aria-hidden=\"true\"style=\"color: #0056b3!important;font-size: 20px;\"></i></a></div>", (i + 1), jsonData[i].RackNumber, jsonData[i].PlantName @*@Request.Cookies["PlantName"].Value.ToString()*@, jsonData[i].PlantType, jsonData[i].StorageLocation,
                            jsonData[i].Minimum, jsonData[i].Maximum, Status,





                        "<div class=\"text-center flex\"><a href=\"#\" class=\"tableIconA bs-tooltip\"  " +
                        "onclick=\"fndelete('" + jsonData[i].Id + "') \"><i class=\"las la-trash \" aria-hidden=\"true\" style=\"color: tomato;font-size: 20px;\"></i></a></div>"])



                    }

                    $('#tblRack').DataTable({

                        "autoWidth": true,
                        "sScrollY": "300px",
                        "sScrollX": "100%",
                        "language": {
                            "paginate": {
                                "previous": "<i class='las la-angle-left'></i>",
                                "next": "<i class='las la-angle-right'></i>"
                            }
                        },
                        'aoColumnDefs': [{
                            'visible': Boolean(@(ViewBag.IsEdit)),
                            'aTargets' : 9
                        }, {
                            'visible': Boolean(@(ViewBag.IsEdit)),
                           'aTargets' : 0
                           }],

                        data: dataset,
                        columns: [{ title: "Edit" }, { title: "Sl No" }, { title: "Rack Number" }, { title: "Plant Name" }, { title: "Plant Type" }, { title: "Storage Location" },
                            { title: "Minimum" }, { title: "Maximum" },{ title: "Status" },  { title: "Delete" }]
                    });

                } else {
                    alert("something went wrong");
                }
            }
        });
    }

    function fnsave() {

        let RackNumber = document.getElementById("RackNumber").value;
        //let PlantId = document.getElementById('PlantId').value;
        let StorageLocation = document.getElementById('StorageLocation').value;
        let Minimum = document.getElementById('Minimum').value;
        let Maximum = document.getElementById('Maximum').value;


        if (RackNumber == "") {
            toastr.error('Please Enter RackNumber');
            return true;
        }
        //if (PlantId == "") {

        //    toastr.error('Please Enter PlantId');
        //    return true;
        //}
        if (StorageLocation == "") {

            toastr.error('Please Select StorageLocation');
            return true;
        }
        if (Minimum == "") {

            toastr.error('Please Enter Minimum');
            return true;
        }

        if (Maximum == "") {

            toastr.error('Please Enter Maximum');
            return true;
        }

        var purl = '';
        var ptype = '';


        if ($('#RackId').val() == '' || $('#RackId').val() == 0) {
            purl = "/Home/AddRack";
            ptype = "POST";
            $('#RackId').val(0);

        }
        else {
            purl = "/Home/EditRack";
            ptype = "POST";

        }

        $.ajax({
            type: ptype,
            url: purl,
            data: JSON.stringify({
                "id": parseInt($('#RackId').val()),
                "PlantId":$('#PlantName').val(),
                //"PlantType": $('#PlantType').val(),
                "RackNumber": $('#RackNumber').val(),
                "StorageLocation": $('#StorageLocation').val(),
                "Minimum": $('#Minimum').val(),
                "Maximum": $('#Maximum').val(),
                "Status": $('#Status').val(),
                "CreatedBy": 1,
                "CreatedOn": new Date(),
                "Updatedby": 1,
                "UpdatedOn": new Date(),

            }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                console.log(response);
                if (response.Success == 0) {
                    toastr.error(response.Message);
                }
                else if (response.Success == 1) {
                    toastr.success(response.Message);
                    funclear(1);
                    LoadGrid();
                }
                else {
                    toastr.error('something went wrong' + response.Message);
                }
            }
        });
    }

    function funclear(a) {
        $('#RackId').val("");
        $('#RackNumber').val("");
        //$('#PlantId').val("");
        $('#PlantName').val("");
        $('#PlantType').val("");
        $('#StorageLocation').val("");
        $('#Minimum').val("");
        $('#Maximum').val("");
        $('#Status').val(1);

        if (a == 0)
            $('#RackModal').modal("show");
        else
            $('#RackModal').modal("hide");
    }




    function fundetails(a, b, c, d, e, f, g, h) {
        $('#RackId').val(a);
        $('#RackNumber').val(b);
        $('#PlantName').val(c);
        //$('#PlantName').val(d);
        $('#PlantType').val(d);
        $('#StorageLocation').val(e);
        $('#Minimum').val(f);
        $('#Maximum').val(g);
        if (h == '1')
            $('#Status').val(1);
        else
            $('#Status').val(0);

        $('#RackModal').modal("show");

    }
</script>
