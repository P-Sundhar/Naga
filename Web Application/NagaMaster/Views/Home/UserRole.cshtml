<script>
    function OnLoadGrid() {

        var dataset = new Array();
        var user = new Object();
        user.RoleId = parseInt($('#roleidlbl').val());
        console.log(user.RoleId);
        $.ajax({
            type: "GET",
            url: "/Home/GetWebUserRoleDetails?RoleId=" + user.RoleId,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (jsonData) {

                console.log(user.RoleId);

                if (jsonData != null) {
                    len = jsonData.length;
                    console.log(jsonData);
                    if ($.fn.DataTable.fnIsDataTable("#tblMenuList"))
                        $("#tblMenuList").dataTable().fnDestroy();

                    for (i = 0; i < len; i++) {

                        var edchecked = '';
                        var vwchecked = '';

                        if (jsonData[i].Edit)
                            edchecked = 'checked="true"';

                        if (jsonData[i].View)
                            vwchecked = 'checked="true"';

                        dataset.push([jsonData[i].MenuId, jsonData[i].MenuDesc, jsonData[i].OptEdit == true ? `<input id="ed${i + 1}" type="checkbox" ${edchecked} >` : "",
                        jsonData[i].OptView == true ? `<input id="vw${i + 1}" type="checkbox" ${vwchecked} >` : ""])

                    }



                    let example = $('#tblMenuList').DataTable({
                        "autoWidth": true,
                        "language": {
                            "paginate": {
                                "previous": "<i class='las la-angle-left'></i>",
                                "next": "<i class='las la-angle-right'></i>"
                            }
                        },
                        "paging": false,
                        "ordering": false,
                        "info": false,
                        "columnDefs": [{
                            orderable: false,
                            className: 'edit-checkbox',
                            targets: 2
                        },
                        {
                            orderable: false,
                            className: 'view-checkbox',
                            targets: 3
                        }
                        ],
                        select: {
                            style: 'os',
                            selector: 'td:third-child'
                        },
                        order: [
                            [1, 'asc']
                        ],


                        data: dataset,
                        columns: [{ title: "Menu Id" }, { title: "Menu Name" }, { title: "Edit" }, { title: "View" }]
                    });
                    //select all edit
                    example.on("click", "th.edit-checkbox", function () {
                        i = 1;
                        $("#tblMenuList TBODY TR").each(function () {
                            var eid = '#ed' + i;
                            if ($("th.edit-checkbox").hasClass("selected")) {
                                $(eid).prop('checked', false);
                            }
                            else {
                                $(eid).prop('checked', true);
                            }
                            i++;
                        });

                        if ($("th.edit-checkbox").hasClass("selected"))
                            $("th.edit-checkbox").removeClass("selected");
                        else
                            $("th.edit-checkbox").addClass("selected");

                    });

                    //select all view
                    example.on("click", "th.view-checkbox", function () {
                        i = 1;
                        $("#tblMenuList TBODY TR").each(function () {
                            var vid = '#vw' + i;
                            if ($("th.view-checkbox").hasClass("selected")) {
                                $(vid).prop('checked', false);
                            }
                            else {
                                $(vid).prop('checked', true);
                            }
                            i++;
                        });

                        if ($("th.view-checkbox").hasClass("selected"))
                            $("th.view-checkbox").removeClass("selected");
                        else
                            $("th.view-checkbox").addClass("selected");

                    });

                } else {
                    alert("something went wrong");
                }
            },
            failure: function (response) {
                alert(response.responseText);
            },
            error: function (response) {
                alert(response.responseText);
            }
        });
    }
</script>

<script>
    function fndelete(id) {
        if (confirm("Do you want to delete this User Role?") == true) {
            $.ajax({

                type: "POST",
                url: "/Home/DeleteUserRole?id=" + id,
                contentType: "application/json; charset=utf-8",
                dataType: "json",

                success: function (jsonData) {
                    location.reload(true);
                    if (jsonData.Success == 0) {
                        toastr.error(jsonData.Message);
                    }
                    else if (jsonData.Success == 1) {

                        toastr.success(jsonData.Message);
                    }

                },

                error: function () {
                    console.log('error');
                }

            });
        }
    }
</script>
<script>
    function fundetails(a, b, c, d) {
        if (a != 0) {
            $('#roleidlbl').val(a);
            $('#RoleName').val(b);
            $('#DisplayName').val(c);
            if (d == '1')
                $('#Status').val(1);
            else
                $('#Status').val(0);
            $('#RoleModal').modal("show");
        }
        else {
            $('#roleidlbl').val(0);
            $('#RoleName').val("");
            $('#DisplayName').val("");
            $('#Status').val(1);

        }
        OnLoadGrid();
    }

    function funclear(a) {
        $('#roleidlbl').val("");
        $('#RoleName').val("");
        $('#DisplayName').val("");
        $('#Status').val(1);

        $('input:checkbox').each(function () { this.checked = false; });

        if (a == 0)
            $('#RoleModal').modal("show");
        else
            $('#RoleModal').modal("hide");
    }

    function fnsave() {
        let RoleName = document.getElementById("RoleName").value;
        let DisplayName = document.getElementById("DisplayName").value;
        if (RoleName == "") {
            toastr.error("Please Eneter RoleName");
            return true;
        }
        if (DisplayName == "") {
            toastr.error("Please Enter DisplayName");
            return true;
        }

        var customers = new Array();
        i = 1;
        $("#tblMenuList TBODY TR").each(function () {
            var eid = '#ed' + i;
            var vid = '#vw' + i;
            var row = $(this);
            var customer = {};
            customer.MenuId = row.find("TD").eq(0).html();
            customer.MenuDesc = row.find("TD").eq(1).html();
            customer.Edit = $(eid).is(":checked");
            customer.View = $(vid).is(":checked");
            customer.RoleId = $('#roleidlbl').val();
            customer.RoleName = $('#RoleName').val();
            customer.DisplayName = $('#DisplayName').val();
            customer.Status = $('#Status').val();
            i++;
            console.log(customer);
            customers.push(customer);
        });


        $.ajax({
            type: "POST",
            url: "/Home/RoleSaveUpdate",
            data: JSON.stringify(customers),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                if (response.Success == 0) {
                    toastr.error(response.Message);
                }
                else if (response.Success == 1) {
                    //funclear(1);
                    location.reload(true);
                    toastr.success(response.Message);


                }

                else {
                    toastr.error("Something went wrong" + response.Message);
                }
            },

            failure: function (response) {
                toastr.error(response.responseText);
            },
            error: function (response) {
                toastr.error(response.responseText);
            }
        });

    }
</script>

