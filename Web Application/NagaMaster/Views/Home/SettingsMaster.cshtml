<script>
    function fndelete(id) {
        if (confirm("Do you want to delete this Settings?") == true) {
            $.ajax({
                type: "POST",
                url: "/Home/DeleteSettings?Id=" + id,
                contentType: "application/json; charset=utf-8",
                dataType: "json",

                success: function (jsonData) {
                    if (jsonData.Success == 0) {
                        toastr.error(jsonData.Message);
                    }
                    else if (jsonData.Success == 1) {
                        toastr.success(jsonData.Message);
                    }
                    LoadGrid();
                },
                error: function () {
                    console.log('error');
                }
            });
        }
    }
</script>




<script>
    $(document).ready(function () {
        LoadGrid();
    });

    function LoadGrid() {
        var dataset = new Array();
        $.ajax({
            type: "GET",
            url: "/Home/GetSettings",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (jsonData) {


                if (jsonData != null) {
                    len = jsonData.length;
                    console.log(jsonData);
                    if ($.fn.DataTable.fnIsDataTable("#tblSettings"))
                        $("#tblSettings").dataTable().fnDestroy();

                    if (len == 0)
                        alert("No Data Found !");


                    for (i = 0; i < len; i++) {

                        jsonData[i].PlantName += '-' + jsonData[i].PlantId;

                        var Status = jsonData[i].Status == 1 ? "Active" : "Inactive";
                        var System = jsonData[i].System == 1 ? "System1" : "System2";

                        dataset.push(["<div class=\"text-center flex\"><a href=\"#\" class=\"tableIconA bs-tooltip\" data-toggle=\"modal\"  " +
                            "onclick=\"fundetails('" + jsonData[i].Id + "','" + jsonData[i].ComPort + "','" + jsonData[i].BaudRate + "','" +
                            jsonData[i].DataBits + "','" + jsonData[i].StopBits +
                            "','" + jsonData[i].System + "','" + jsonData[i].UnitId + "','" + jsonData[i].PlantId +
                            "','" + jsonData[i].Status
                            + "')\"><i class=\"las la-edit font-20 text-primary\"aria-hidden=\"true\"style=\"color: #0056b3!important;font-size: 20px;\"></i></a></div>",
                            (i + 1), jsonData[i].ComPort, jsonData[i].BaudRate, jsonData[i].DataBits, jsonData[i].StopBits,
                        System, jsonData[i].PlantName,Status,





                            "<div class=\"text-center flex\"><a href=\"#\" class=\"tableIconA bs-tooltip\"  " +
                            "onclick=\"fndelete('" + jsonData[i].Id + "') \"><i class=\"las la-trash \" aria-hidden=\"true\" style=\"color: tomato;font-size: 20px;\"></i></a></div>"])



                    }

                    $('#tblSettings').DataTable({

                        "autoWidth": true,
                        "sScrollY": "300px",
                        "sScrollX": "100%",
                        "language": {
                            "paginate": {
                                "previous": "<i class='las la-angle-left'></i>",
                                "next": "<i class='las la-angle-right'></i>"
                            }
                        },
                        'aoColumnDefs': [{
                            'visible': Boolean(@(ViewBag.IsEdit)),
                            'aTargets' : 9
                        }, {
                            'visible': Boolean(@(ViewBag.IsEdit)),
                           'aTargets' : 0
                           }],
                        data: dataset,
                        columns: [{ title: "Edit" },{ title: "Id" },{ title: "COM Port" }, { title: "Baud Rate" }, { title: "Data Bits" }, { title: "Stop Bits" }, { title: "System" },
                            { title: "Plant Name" }, { title: "Status" },  { title: "Delete" }]
                    });

                } else {
                    alert("something went wrong");
                }
            }
        });
    }

    function fundetails(a, b, c, d, e, f, g, h, i) {
        $('#SetId').val(a);
        $('#ComPort').val(b);
        $('#BaudRate').val(c);
        $('#DataBits').val(d);
        $('#StopBits').val(e);
        if (f == "1")
            $('#System').val(1);
        else
            $('#System').val(2);
        $('#UnitId').val(g);
        $('#PlantId').val(h);
        if (i == '1')
            $('#Status').val(1);
        else
            $('#Status').val(0);

        $('#SetModal').modal("show");

    }

