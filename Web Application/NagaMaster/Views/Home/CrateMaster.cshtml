<script>
    $(document).ready(function () {
        LoadGrid();
    });

    function LoadGrid() {
        var dataset = new Array();
        $.ajax({
            type: "GET",
            url: "/Home/GetCrate",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (jsonData) {


                if (jsonData != null) {
                    len = jsonData.length;
                    console.log(jsonData);
                    if ($.fn.DataTable.fnIsDataTable("#tblCrate"))
                        $("#tblCrate").dataTable().fnDestroy();

                    if (len == 0)
                        alert("No Data Found !");


                    for (i = 0; i < len; i++) {



                        var Status = jsonData[i].Status == 1 ? "Active" : "Inactive";

                        dataset.push(["<div class=\"text-center flex\"><a href=\"#\" class=\"tableIconA bs-tooltip\" data-toggle=\"modal\"  " +
                            "onclick=\"fundetails('" + jsonData[i].Id + "','" + jsonData[i].CrateCode + "','" + jsonData[i].CurrentStatus + "','" + jsonData[i].Remarks + "','" +
                            jsonData[i].Status + "')\"><i class=\"las la-edit font-20 text-primary\"aria-hidden=\"true\"style=\"color: #0056b3!important;font-size: 20px;\"></i></a></div>",
                            (i + 1), jsonData[i].CrateCode, jsonData[i].CurrentStatus, jsonData[i].Remarks, Status,

                        "<div class=\"text-center flex\"><a href=\"#\" class=\"tableIconA bs-tooltip\"  " +
                        "onclick=\"fndelete('" + jsonData[i].Id + "') \"><i class=\"las la-trash \" aria-hidden=\"true\" style=\"color: tomato;font-size: 20px;\"></i></a></div>"])



                    }

                    $('#tblCrate').DataTable({

                        "autoWidth": true,
                        "sScrollY": "300px",
                        "sScrollX": "100%",
                        "language": {
                            "paginate": {
                                "previous": "<i class='las la-angle-left'></i>",
                                "next": "<i class='las la-angle-right'></i>"
                            }
                        },
                        'aoColumnDefs': [{
                            'visible': Boolean(@(ViewBag.IsEdit)),
                            'aTargets' : 6
                        }, {
                            'visible': Boolean(@(ViewBag.IsEdit)),
                           'aTargets' : 0
                           }],

                        data: dataset,
                        columns: [{ title: "Edit" }, { title: "Sl No" }, { title: "Sticker Code" }, { title: "Current Status" }, { title: "Remarks" },{ title: "Status" }, { title: "Delete" }]
                    });

                } else {
                    alert("something went wrong");
                }
            }
        });
    }

    function fnsave() {
        let CrateCode = document.getElementById("CrateCode").value;


        if (CrateCode == "") {
            toastr.error('Please Enter CrateCode');
            return true;
        }



        var purl = '';
        var ptype = '';


        if ($('#crateId').val() == '' || $('#crateId').val() == 0) {
            purl = "/Home/AddCrate";
            ptype = "POST";
            $('#crateId').val(0);

        }
        else {
            purl = "/Home/EditCrate";
            ptype = "POST";

        }

        $.ajax({
            type: ptype,
            url: purl,
            data: JSON.stringify({
                "id": parseInt($('#crateId').val()),
                "CrateCode": $('#CrateCode').val(),
                "CurrentStatus": $('#CurrStatus').val(),
                "Remarks": $('#Remarks').val(),
                "Status": $('#Status').val(),
                "CreatedBy": 1,
                "CreatedOn": new Date(),
                "Updatedby": 1,
                "UpdatedOn": new Date(),

            }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                console.log(response);
                if (response.Success == 0) {
                    toastr.error(response.Message);
                }
                else if (response.Success == 1) {
                    toastr.success(response.Message);
                    funclear(1);
                    LoadGrid();
                }
                else {
                    toastr.error('something went wrong' + response.Message);
                }
            }
        });
    }
    function funclear(a) {
        $('#crateId').val("");
        $('#CrateCode').val("");
        $('#CurrStatus').val("");
        $('#Remarks').val("");
        $('#Status').val(1);

        if (a == 0)
            $('#crateModal').modal("show");
        else
            $('#crateModal').modal("hide");
    }

    function fundetails(a, b, c, d, e) {
        $('#crateId').val(a);
        $('#CrateCode').val(b);
        $('#CurrStatus').val(c);
        $('#Remarks').val(d);
        if (e == '1')
            $('#Status').val(1);
        else
            $('#Status').val(0);

        $('#crateModal').modal("show");

    }

    function fndelete(id) {
        if (confirm("Do you want to delete this Crate?") == true) {
            $.ajax({
                type: "POST",
                url: "/Home/DeleteCrate?Id=" + id,
                contentType: "application/json; charset=utf-8",
                dataType: "json",

                success: function (jsonData) {
                    if (jsonData.Success == 0) {
                        toastr.error(jsonData.Message);
                    }
                    else if (jsonData.Success == 1) {
                        toastr.success(jsonData.Message);
                    }
                    LoadGrid();
                },
                error: function () {
                    console.log('error');
                }
            });
        }
    }
</script>