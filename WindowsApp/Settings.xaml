<Window x:Class="Naga.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Naga"
        Title="Settings" Width="1920" Height="700" Background="White" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None" >
    <Grid Width="Auto" Margin="0,0,0,0">
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Images/oyola.jpg"/>
        </Grid.Background>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <local:Header HorizontalAlignment="Stretch" Grid.Column="0" Grid.Row="0"  VerticalAlignment="Top"/>
            <local:Footer HorizontalAlignment="Stretch" Grid.Column="0" Grid.Row="2"  VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</Window>
